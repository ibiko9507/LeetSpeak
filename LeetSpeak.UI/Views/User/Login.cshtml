@{
	ViewData["Title"] = "Home Page";
}


<div class="container mt-5">
	<div class="row mt-5">
		<form asp-controller="Login" asp-action="Login" method="post">
			<div class="row mt-4">
				<div class="col-md-6">
					<div class="mb-3">
						<input type="text" class="form-control" id="userName" name="UserName" aria-describedby="User Name" placeholder="User Name">
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<input type="password" class="form-control" id="password" name="Password" placeholder="Password">
					</div>
				</div>
			</div>

			<div class="row mt-4">
				<div class="col-md-6">
					<div class="mb-3">
						<input type="checkbox" id="rememberMe" name="RememberMe" checked disabled>

						<label class="form-check-label" for="rememberMe">Remember me</label>
					</div>
				</div>
			</div>

			<div class="form-group">
			</div>
			<div class="form-group form-check">
			</div>
			<button type="submit" class="btn btn-primary">Login</button>
		</form>
	</div>
</div>
